# FeynmanCraft ADK Environment Variables
# Copy this file to .env and fill in your actual values

# Google AI API Key (required for Gemini models and Google Search)
# This key enables both Gemini LLM access and native Google Search for deep research
GOOGLE_API_KEY=your_google_ai_api_key_here

# Model configuration (optional)
ADK_MODEL_NAME=gemini-2.5-flash
MODEL_TEMPERATURE=0.3

# Agent-specific model configuration (optional)
# Complex agents use gemini-2.5-pro for better reasoning
PLANNER_MODEL=gemini-2.5-pro
GENERATOR_MODEL=gemini-2.5-pro
PHYSICS_VALIDATOR_MODEL=gemini-2.5-pro
DEEP_RESEARCH_MODEL=gemini-2.5-pro

# Simple agents use gemini-2.5-flash for speed
KB_RETRIEVER_MODEL=gemini-2.5-flash
TIKZ_VALIDATOR_MODEL=gemini-2.5-flash
FEEDBACK_MODEL=gemini-2.5-flash
RESEARCH_QUERY_MODEL=gemini-2.0-flash

# Knowledge Base Mode (now local only)
# Options: "local" (default: local) - BigQuery functionality removed
KB_MODE=local

# Embedding Model (optional)
EMBEDDING_MODEL=text-embedding-004

# Search Configuration (optional)
DEFAULT_SEARCH_K=5
SEARCH_TIMEOUT=30

# Deep Research Configuration (optional)
# Maximum iterations for deep research (default: 3)
# MAX_RESEARCH_ITERATIONS=3
# Number of search queries per iteration (default: 3)
# QUERIES_PER_ITERATION=3

# Logging Configuration
FEYNMANCRAFT_ADK_LOG_LEVEL=INFO

# Optional: Agent Configuration
# AGENT_CONFIG=default
# DEBUG=false